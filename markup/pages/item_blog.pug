doctype html
html(class="no-js", lang="ru")

    include ../components/head/head.pug

    include ../components/header/header.pug
    include ../components/nav/nav.pug
    include ../components/included/included.pug
    include ../components/blog_item/blog_item.pug
    include ../components/blog/blog.pug
    include ../components/fx-ctrl-panel/fx-ctrl-panel.pug
